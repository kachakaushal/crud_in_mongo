<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <a href="/" class="text-blue-500">Back to the home</a>
        <h1 class="text-3xl tracking-tighter mb-3">All users</h1>
        <div class="users flex gap-3 flex-wrap">  
            <%if(users.length>0){%>
                <% users.forEach(function(user){ %>
                  
                    <div class="user w-72 p-4 bg-zinc-700 rounded-lg">
                        <div class="w-full h-52 rounded-lg bg-red-500"><img class="w-full h-full object-cover" src="<%=user.image%>"></div>
                        <h3 class="text-xl tracking-tighter mt-3"><%= user.user %></h3>
                        <h5 class="text-white"><%= user.email%></h5>
                        <div class="gap-3 flex mt-10">
                            <a href="/edit/<%=user._id%>">Edit user</a>
                            <a href="/delete/<%=user._id%>" class="text-red-500">Delete user</a>
                        </div>
                    </div>
                  
                 
                  <%
                  })
                  %>
             

           <%}else{ %>
            <h1>not user yet</h1>
            <%}%>      
        
           
               
        
           
        </div>
    </div>
</body>
</html>